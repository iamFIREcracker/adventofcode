(define-modify-macro maxf (&rest others) max)

(defun tick (blueprint state)
  (cons
    (make-state :resources (collect-resources (resources state) (robots state))
                :robots (robots state))
    (loop for (robots-built resources-left) in (build-robots (resources state)
                                                             (costs blueprint))
          collect (make-state :resources (collect-resources resources-left
                                                            (robots state))
                              :robots (loop for r1 in (robots state)
                                            for r2 in robots-built
                                            collect (+ r1 r2))))))
#+#:excluded (tick (car (blueprints)) (init-state))

(defun simulate (limit blueprint)
  (bnd1 queue (list (init-state))
    (repeat limit
      (pr (length queue))
      (setf queue (loop for s in queue
                        nconc (tick blueprint s)))
      (pr (length queue))
      (setf queue (remove-duplicates queue :test 'equalp))
      (pr (length queue))
      (pr '---------))
    (reduce #'max queue :key [fourth (resources _)])))

(define-modify-macro maxf (&rest others) max)

(defun simulate (limit blueprint)
  (let ((best 0))
    (labels ((recur (remaining state)
               #+#:excluded (break)
               (cond ((zerop remaining) (maxf best (last-elt (resources state))))
                     ((state-hopeless-p state remaining best) nil)
                     #+#:excluded (t (dolist (n (sort (tick blueprint state) #'state-better-p))

                                       (recur (1- remaining) n)))
                     (t (dolist (n (reverse (tick blueprint state)))

                          (recur (1- remaining) n))))))
      (recur limit (init-state)))
    best))

(defun state-hopeless-p (state remaining best)
  (let* ((robots (last-elt (robots state)))
         (assemblable (- remaining (reduce #'+ (robots state))))
         (collectable (* (/ assemblable 2) (+ 1 assemblable)))
         (cracked (last-elt (resources state))))
    (pr robots assemblable collectable cracked)
    (< (+ (* robots remaining) cracked collectable) best)))

(defun state-better-p (s1 s2)
  (destructuring-bind (or1 cl1 ob1 ge1) (robots s1)
    (destructuring-bind (or2 cl2 ob2 ge2) (robots s2)
      (or (> ge1 ge2)
          (and (= ge1 ge2)
               (or (> ob1 ob2)
                   (and (= ob1 ob2)
                        (or (> cl1 cl2)
                            (and (= cl1 cl2)
                                 (> or1 or2))))))))))

(defun quality-level (blueprint cracked) (* (id blueprint) cracked))

